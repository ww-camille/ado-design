@model portfolio.Model.MyContact

<input type="hidden" asp-for="@Model.ID" />

<div class="section-contact">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 offset-sm-1 col-lg-6 offset-lg-3">
                <h2>Contact Us</h2>

                <p>Please send us a message using this form. </p>

                <form>
                    <div class="form-group">
                        <span class="countdown"></span>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        <input type="text" class="form-control input-clear" maxlength="60" id="InquiryName" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        <input type="email" asp-for="@Model.Email" class="form-control" id="InquiryEmail" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <span class="countdown"></span>
                        <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                        <input asp-for="@Model.Subject" type="text" class="form-control input-clear" maxlength="60" id="InquirySubject" placeholder="Subject">
                    </div>
                    <div class="form-group">
                        <span class="countdown"></span>
                        <span asp-validation-for="@Model.Message" class="text-danger"></span>
                        <textarea asp-for="@Model.Message" class="form-control" id="InquiryTextarea" rows="4" maxlength="250" placeholder="Enter your message here."></textarea>
                    </div>



                    <div class="form-actions">
                        <button type="button" class="btn btn-success">
                            Submit
                        </button>
                    </div>
                </form>



            </div>
        </div>
    </div>
</div><!-- END CLASS SECTION-CONTACT -->
